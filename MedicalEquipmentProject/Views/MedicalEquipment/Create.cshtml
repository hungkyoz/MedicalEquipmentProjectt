@model MedicalEquipmentProject.Models.MedicalEquipment
@{
    ViewData["Title"] = "Create Equipment";
}

<h2 class="mb-4">Create New Medical Equipment</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Manufacturer"></label>
        <input asp-for="Manufacturer" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PurchaseDate"></label>
        <input asp-for="PurchaseDate" type="date" class="form-control" />
        <span asp-validation-for="PurchaseDate" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <div class="form-group">
        <label>Assign To</label>
        <select asp-for="AssignedUserId" asp-items="ViewBag.Users" class="form-control">
            <option value="">-- Select User --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Upload Images (.jpg/.png, max 5MB)</label>
        <input type="file" name="Images" class="form-control" multiple />
    </div>

    <button type="submit" class="btn btn-success mt-3">Create</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
